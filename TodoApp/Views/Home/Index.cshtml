@{
    ViewData["Title"] = "Welcome to Personal Mini Todo App";
}

<div class="widget-box" style="margin-top: 100px">
    <div class="widget-header">
        <h4 class="widget-title">Welcome to Personal Mini Todo App</h4>
    </div>
    <div class="widget-main text-center">
        <p class="lead">Stay organized and boost your productivity with our simple and intuitive todo app.</p>
        <p>Manage your <strong>Tasks</strong> and organize them into <strong>Categories</strong> to keep everything in check.</p>
        <div class="mt-4">
            <a asp-controller="Task" asp-action="Index" class="btn btn-primary mr-2">
                <i class="fas fa-tasks mr-1"></i> View Tasks
            </a>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-folder mr-1"></i> View Categories
            </a>
        </div>
    </div>
</div>