@model TodoApp.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Danh sách danh mục";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <li class="active">Danh sách danh mục</li>
            </ul>
        </div>

        <div class="page-content">
            <div class="page-header">
                <h1 style="font-weight: bold;">Danh sách danh mục</h1>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="pull-right" style="margin-bottom: -24px">
                        <a asp-action="Form">
                            <button class="btn btn-app btn-primary btn-sm" title="Thêm danh mục">
                                <i class="ace-icon fa fa-plus bigger-120"></i>
                            </button>
                        </a>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table id="categoryList" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="center">
                            <input type="checkbox" id="checkAll" class="check-box-element">
                        </th>
                        <th class="center">Tên danh mục</th>
                        <th class="center">Mô tả</th>
                        <th class="center">Ngày tạo</th>
                        <th class="center">Thao tác</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var tblCategory = $("#categoryList").DataTable({
                "destroy": true,
                "serverSide": false,
                "processing": false,
                "language": {
                    "emptyTable": "Không có dữ liệu",
                    //"info": "Hiển thị _START_ đến _END_ của _TOTAL_ bản ghi",
                    "infoEmpty": "Hiển thị 0 đến 0 của 0 bản ghi",
                    "processing": "Đang tải dữ liệu...",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                },
                "autoWidth": true,
                "responsive": true,
                "ordering": false,
                "pageLength": 10,
                "lengthChange": false,
                "searching": false,
                "ajax": {
                    "url": "@Url.Action("GetAllCategories", "Category")",   // url to controller action
                    "method": "GET",
                    "dataSrc": "data",
                    "data": {
                        "keyword": function () {
                            return $("#keyword").val();
                        }
                    }
                },
                "paging": false,
                "columns": [
                    {
                        "data": "categoryId",
                        "render": function (data, type, row) {
                            return `<input type="checkbox" class="check-box-element" id="selected-${data}" data-id="${data}" />`;
                        },
                        "className": "center"
                    },
                    {
                        "data": "name",
                        "render": function (data, type, row) {
                            return data || "N/A";
                        },
                        "className": "center"
                    },
                    {
                        "data": "description",
                        "render": function (data, type, row) {
                            return data || "N/A";
                        },
                        "className": "center"
                    },
                    {
                        "data": "createdAt",
                        "render": function (data, type, row) {
                            return moment(data).format('DD/MM/YYYY HH:mm');
                        },
                        "className": "center"
                    },
                    {
                        "data": "categoryId",
                        "render": function (data, type, row) {
                            return `
                            <a href="/Category/Form/${data}" data-toggle="tooltip" title="Xem chi tiết">
                                <i class="fas fa-eye mx-1" style="font-size:1.5em;line-height:1em;"></i>
                            </a>
                            
                            <a href="#" onclick="deleteCategory(${data})" data-toggle="tooltip" title="Xóa danh mục">
                                <i class="fas fa-trash mx-1" style="font-size:1.5em;line-height:1em;"></i>
                            </a>`;
                        },
                        "className": "center"
                    }
                ]
            });

            // Check all checkboxes
            $("#checkAll").on("change", function () {
                $("#categoryList tbody input[type='checkbox']").prop("checked", this.checked);
            });

            // Delete single category
            window.deleteCategory = function (id) {
                if (confirm("Bạn có chắc muốn xóa danh mục này?")) {
                    $.ajax({
                        url: "@Url.Action("Delete", "Category")/" + id,
                        type: "POST",
                        data: { id: id },
                        headers: {
                            "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            alert(response.message || "Xóa danh mục thành công!");
                            tblCategory.ajax.reload();
                        },
                        error: function (response) {
                            alert(response.responseJSON?.message || "Đã có lỗi xảy ra khi xóa danh mục.");
                        }
                    });
                }
            };
        });
    </script>
}   